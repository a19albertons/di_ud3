<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Historial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/historial_item_height"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/historial_item_height"
            android:layout_weight="0.33"
            android:text="@string/historial_lanzamiento"
            android:enabled="false"
            android:background="@color/grey"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_historial"
            android:hint="@string/historial_lanzamiento"
            android:inputType="text"
            android:autofillHints="username" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/historial_item_height"
            android:layout_weight="0.33"
            android:enabled="false"
            android:text="@string/historial_tipo_dado"
            android:background="@color/grey"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_historial"
            android:hint="@string/historial_tipo_dado"
            android:inputType="text"
            android:autofillHints="username" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/historial_item_height"
            android:layout_weight="0.33"
            android:text="@string/historial_total"
            android:enabled="false"
            android:background="@color/grey"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_historial"
            android:hint="@string/historial_total"
            android:inputType="text"
            android:autofillHints="username" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/hay_contenido_historial">
        <!-- Aquí se agregarán dinámicamente las filas del historial de lanzamientos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historial_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/no_hay_contenido_historial">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/historial_vacio"
            android:enabled="false"
            android:textColor="@color/black"
            android:hint="@string/historial_vacio"
            android:inputType="text"
            android:autofillHints="username"/>
    </LinearLayout>


</LinearLayout>